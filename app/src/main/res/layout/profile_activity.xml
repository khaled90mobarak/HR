<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e8e8e8"
    android:padding="10dp"
    >



    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/p_btnimguser"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/img_news_cell_showmore"
        android:scaleType="fitXY"/>
        <!--android:background="@null"/>/-->


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="30dp"

        android:background="#ffffff"
        >

        <TextView

            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Full name :"
            android:id="@+id/textView9"
            android:gravity="center|left"
            android:paddingLeft="5dp"
            android:layout_marginTop="50dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/p_txtfullname"
            android:gravity="center_vertical|left"
            />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:background="#ffffff"
        android:layout_gravity="center_horizontal"
        >

        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Email :"
            android:id="@+id/textView15"
            android:gravity="center|left"
            android:paddingLeft="5dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/p_txtemail"
            android:gravity="center_vertical|left"
            />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:background="#ffffff"
        android:layout_gravity="center_horizontal"

        >

        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Mobile :"
            android:id="@+id/textView19"
            android:gravity="center|left"
            android:paddingLeft="5dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/p_txtmobile"
            android:gravity="center_vertical|left"
            />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:background="#ffffff"
        android:layout_gravity="center_horizontal" >

        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Language :"
            android:id="@+id/textView25"
            android:gravity="center|left"
            android:paddingLeft="5dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:background="#ffffff"
        android:layout_gravity="center_horizontal" >

        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Cash :"
            android:id="@+id/textView29"
            android:gravity="center|left"
            android:paddingLeft="5dp" />

        <ImageButton
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:id="@+id/btncash"
            android:src="@drawable/cashon"
            android:scaleType="fitXY"
            android:contentDescription=""
            android:layout_gravity="center_vertical"
            android:background="@null" />

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Change username"
        android:id="@+id/p_btnchangeusername"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:background="#377ef0"
        android:textColor="#ffffff" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Reset your password"
        android:id="@+id/p_btnresestps"
        android:layout_marginTop="5dp"
        android:background="#377ef0"
        android:textColor="#ffffff" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Clear cash"
        android:id="@+id/p_btnclearcash"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:background="#377ef0"
        android:textColor="#ffffff" />

</LinearLayout>